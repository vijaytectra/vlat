{
  "name": "vlat-exam",
  "version": "1.0.0",
  "type": "module",
  "description": "VLAT Exam Web Application",
  "scripts": {
    "dev": "vite",
    "build": "node scripts/build-css.js",
    "build:css": "npx tailwindcss -i css/main.css -o dist/css/main.css --minify",
    "build:watch": "npx tailwindcss -i css/main.css -o dist/css/main.css --watch",
    "preview": "vite preview",
    "netlify-build": "npm run build",
    "vercel-build": "npm run build",
    "check-images": "node scripts/optimize-images.js",
    "optimize-svgs": "node scripts/optimize-svgs-safe.js",
    "extract-svg-images": "node scripts/extract-and-convert-svg-images.js"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.8"
  }
}
